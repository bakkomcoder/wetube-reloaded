extends ../base

block content 
    if errorMessage 
        span=errorMessage
    form(method="POST")
        input(placeholder="이름", name="username", type="text", required)
        input(placeholder="비밀번호", name="password", type="password", required)
        input(type="submit", value="로그인")
        include ../partials/social-login
    div.auth-switch
        span 아직 계정이 없나요? 
        a(href="/join") 회원가입 &rarr;